import random
print("Let's flip a coin")
count = 0
total1 = 0
total2 = 0

while count != 50:
    random_number = random.randint(0,1)
    if random_number ==1:
        total1 = total1 + 1
        print("It was a head!")
        count = count+1
        
    else:
        total2 = total2 + 1
        print("It was a tail!")
        count = count+1

print("Number of heads:", total1)
print("Number of tails:", total2)
